<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BeautyPlanner.PaginaLogin"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False">
    
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" 
                     HorizontalOptions="FillAndExpand">
            <Image Source="logo.png">
                
            </Image>

            <Entry x:Name="txtusuario" TextColor="Black" Placeholder="Usuário" PlaceholderColor="LightGray" />

            <Entry x:Name="txtsenha" IsPassword="True" TextColor="#690b22" Placeholder="Senha" PlaceholderColor="LightGray" />
            <Button Text="Login" BackgroundColor="#690b22" CornerRadius="30" Clicked="Button_Clicked"/>
            <Label Text="Registro" TextColor="#690b22"  HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Label.GestureRecognizers>
                    
            </Label>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>